<div class="container">
  <h1>Cocktails</h1>
  <div class="row">
    <ul>
      <% @cocktails.each do |cocktail| %>
        <li>
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
          <%= link_to cocktail_path(cocktail), method: :delete do %>
            <i class="fa fa-trash"></i>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <%= link_to "+ Cocktail", new_cocktail_path, class: "btn btn-danger"%>
</div>