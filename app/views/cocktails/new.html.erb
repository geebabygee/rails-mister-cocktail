<div class="container">
  <div class="row">
    <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name, class:"big-input"%>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Add a cocktail", class: "btn btn-danger" %>
    <% end %>
  </div>
</div>